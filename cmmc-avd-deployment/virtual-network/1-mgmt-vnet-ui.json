{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/uiDefinition.json#",
  "handler": "Microsoft.Common.TextBox",
  "version": "1.0.0.0",
  "parameters": {
    "basics": [
      {
        "name": "vnetIpv4AddressSpace",
        "type": "Microsoft.Common.TextBox",
        "label": "Virtual Network Address Space (CIDR)",
        "defaultValue": "172.16.0.0/16",
        "toolTip": "Enter the IPv4 address space in CIDR format, e.g., 172.16.0.0/16",
        "constraints": {
          "required": true,
          "regex": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/([0-9]|[1-2][0-9]|3[0-2])$",
          "validationMessage": "Must be a valid CIDR format, e.g., 172.16.0.0/16"
        },
        "visible": true
      }
    ],
    "outputs": {
      "vnetIpv4AddressSpace": "[basics('vnetIpv4AddressSpace')]"
    }
  }
}